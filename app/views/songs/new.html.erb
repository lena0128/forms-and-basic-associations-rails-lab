<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
<br><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
 <br><br> 
 <%= f.label :genre, "Genres" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name%>
<br><br>
<%= f.label :notes, "Notes" %>  
<input name='song[song_notes][]' id='song_notes_1'>
<input name='song[song_notes][]' id='song_notes_2'>
<input name='song[song_notes][]' id='song_notes_3'>
  <br/><br><br>
  <%= f.submit %>
<% end %>

